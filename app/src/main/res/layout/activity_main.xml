<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewDog"
        android:id="@+id/imageViewPlant"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/dog" />
    android:src="@drawable/plant" />

    <TextView
        android:id="@+id/textViewHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health: "
        android:layout_margin="16dp"/>
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:text="Health: " />

    <TextView
        android:id="@+id/textViewHunger"
        android:id="@+id/textViewWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hunger: "
        android:layout_below="@id/textViewHealth"
        android:layout_margin="16dp"
        tools:ignore="MissingConstraints" />
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:text="Water: " />

    <TextView
        android:id="@+id/textViewCleanliness"
        android:id="@+id/textViewSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleanliness: "
        android:layout_below="@id/textViewHunger"
        android:layout_margin="16dp"/>
    android:layout_below="@id/textViewWater"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:text="Sunlight: " />

    <Button
        android:id="@+id/buttonFeed"
        android:id="@+id/buttonWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feed"
        android:layout_below="@id/textViewCleanliness"
        android:layout_margin="16dp"/>
    android:layout_below="@id/textViewSun"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:text="Water" />

    <Button
        android:id="@+id/buttonPlay"
        android:id="@+id/buttonFertilize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_toRightOf="@id/buttonFeed"
        android:layout_below="@id/textViewCleanliness"
        android:layout_margin="16dp"/>
    android:layout_below="@id/textViewSun"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:layout_toRightOf="@id/buttonWater"
    android:text="Fertilize" />

    <Button
        android:id="@+id/buttonClean"
        android:layout_width="wrap_content"
        android:id="@+id/buttonSun"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:text="Clean"
        android:layout_toRightOf="@id/buttonPlay"
        android:layout_below="@id/textViewCleanliness"
        android:layout_margin="16dp"
        android:layout_below="@id/textViewSun"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/buttonFertilize"
        android:text="Sun" />

</RelativeLayout>